# Casper VPN Agent Configuration
# Copy this file to .env and update the values

# Required: Base URL of your API server
API_BASE_URL=http://localhost:5000

# Optional: API authentication token
# API_TOKEN=your_secret_token_here

# Optional: Automatically provision VPN protocols if missing (default: true)
AUTO_PROVISION=true

# Optional: Server location (e.g., US-East, EU-West, Asia-Pacific)
SERVER_LOCATION=US-East

# Optional: Maximum number of users allowed on this server (default: 200)
MAX_USERS=200

# Optional: Connection timeout in seconds (default: 30)
CONNECTION_TIMEOUT_SECS=30

# Optional: Health check interval in seconds (default: 60)
# This controls how often the agent sends status updates to the server
HEALTH_CHECK_INTERVAL_SECS=60
