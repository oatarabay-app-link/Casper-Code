# ===========================================
# CasperVPN Staging Environment
# ===========================================

ENVIRONMENT=staging

# Database
DB_HOST=postgres
DB_PORT=5432
DB_NAME=caspervpn_staging
DB_USER=staginguser
DB_PASSWORD=CHANGEME_StagingDBPassword!

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGEME_StagingRedisPassword!

# API
API_PORT=8080
API_URL=https://staging-api.caspervpn.com
JWT_SECRET=CHANGEME_StagingJWTSecret!

# Admin Panels
REACT_ADMIN_PORT=3000
PHP_ADMIN_PORT=9000
APP_KEY=base64:CHANGEME_StagingAppKey!
APP_DEBUG=false

# Server Agent
AGENT_PORT=8081
RUST_LOG=info

# Nginx
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_USER=admin
GRAFANA_PASSWORD=CHANGEME_StagingGrafanaPassword!
ALERTMANAGER_PORT=9093

# Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=staging@caspervpn.com
SMTP_PASSWORD=CHANGEME_StagingEmailPassword!
SMTP_FROM=staging@caspervpn.com

# Backup
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=7
BACKUP_S3_BUCKET=caspervpn-staging-backups
AWS_ACCESS_KEY_ID=CHANGEME_AwsAccessKey
AWS_SECRET_ACCESS_KEY=CHANGEME_AwsSecretKey
AWS_REGION=us-east-1

# SSL
SSL_ENABLED=true
SSL_CERT_PATH=/etc/nginx/ssl/staging-caspervpn.crt
SSL_KEY_PATH=/etc/nginx/ssl/staging-caspervpn.key

# Notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Feature Flags
FEATURE_METRICS_ENABLED=true
FEATURE_RATE_LIMITING_ENABLED=true
FEATURE_API_DOCS_ENABLED=true
