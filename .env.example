# ===========================================
# CasperVPN Environment Configuration
# ===========================================
# Copy this file to .env and update with your actual values
# NEVER commit .env to git!

# Environment
ENVIRONMENT=production

# ===========================================
# Database Configuration
# ===========================================
DB_HOST=postgres
DB_PORT=5432
DB_NAME=caspervpn
DB_USER=casperuser
DB_PASSWORD=CHANGEME_SecurePassword123!

# ===========================================
# Redis Configuration
# ===========================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGEME_RedisPassword123!

# ===========================================
# API Configuration
# ===========================================
API_PORT=8080
API_URL=http://localhost:8080
JWT_SECRET=CHANGEME_JWTSecretKey_MinimumLength32Characters!

# ===========================================
# Admin Panel Configuration
# ===========================================
REACT_ADMIN_PORT=3000
PHP_ADMIN_PORT=9000
APP_KEY=base64:CHANGEME_LaravelAppKey_Base64Encoded!
APP_DEBUG=false

# ===========================================
# Server Agent Configuration
# ===========================================
AGENT_PORT=8081
RUST_LOG=info

# ===========================================
# Nginx Configuration
# ===========================================
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# ===========================================
# Monitoring Configuration
# ===========================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_USER=admin
GRAFANA_PASSWORD=CHANGEME_GrafanaPassword!
ALERTMANAGER_PORT=9093

# ===========================================
# Email Configuration (SMTP)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=alerts@caspervpn.com
SMTP_PASSWORD=CHANGEME_EmailPassword!
SMTP_FROM=noreply@caspervpn.com

# ===========================================
# Backup Configuration
# ===========================================
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=7
BACKUP_S3_BUCKET=caspervpn-backups
AWS_ACCESS_KEY_ID=CHANGEME_AwsAccessKey
AWS_SECRET_ACCESS_KEY=CHANGEME_AwsSecretKey
AWS_REGION=us-east-1

# ===========================================
# SSL Configuration
# ===========================================
SSL_ENABLED=false
SSL_CERT_PATH=/etc/nginx/ssl/caspervpn.crt
SSL_KEY_PATH=/etc/nginx/ssl/caspervpn.key

# ===========================================
# Notification Configuration
# ===========================================
# Slack Webhook (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Discord Webhook (optional)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/WEBHOOK

# ===========================================
# Feature Flags
# ===========================================
FEATURE_METRICS_ENABLED=true
FEATURE_RATE_LIMITING_ENABLED=true
FEATURE_API_DOCS_ENABLED=true
