<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    custom:context=".screens.Privacy_Policy">

    <include
        layout="@layout/toolbar_title_and_menu"
        android:id="@+id/AppBarLayout"/>

    <ScrollView
            android:id="@+id/ScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <com.caspervpn.vpn.helper.MyTextView
                        style="@style/ParagraphTitleNoIcon"
                        android:text="@string/CasperVPNPrivacyPolicy"/>

                </LinearLayout>

                <com.caspervpn.vpn.helper.MyJustifiedTextView
                    style="@style/ParagraphText"
                    android:text="@string/CasperVPNPrivacyPolicy_Data" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <com.caspervpn.vpn.helper.MyTextView
                            style="@style/ParagraphTitleNoIcon"
                            android:text="@string/WeCollect" />

                    </LinearLayout>

                    <com.caspervpn.vpn.helper.MyJustifiedTextView
                        style="@style/ParagraphText"
                        android:text="@string/WeCollect_Data" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <com.caspervpn.vpn.helper.MyTextView
                            style="@style/ParagraphTitleNoIcon"
                            android:text="@string/InfoUsed" />

                    </LinearLayout>

                    <com.caspervpn.vpn.helper.MyJustifiedTextView
                        style="@style/ParagraphText"
                        android:text="@string/InfoUsed_Data" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <com.caspervpn.vpn.helper.MyTextView
                            style="@style/ParagraphTitleNoIcon"
                            android:text="@string/Disclosure" />

                    </LinearLayout>

                    <com.caspervpn.vpn.helper.MyJustifiedTextView
                        style="@style/ParagraphText"
                        android:text="@string/PrivacyPolicyDisclosure_Data" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        </ScrollView>

</LinearLayout>

