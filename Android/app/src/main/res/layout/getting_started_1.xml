<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/GettingStartedRadius"
        android:src="@drawable/earth_bg"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/GettingStartedRadius">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    style="@style/TipsImage"
                    android:src="@mipmap/tips_icon_1"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <com.caspervpn.vpn.helper.MyTextView
                        style="@style/TipsTitle"
                        android:text="@string/TipsTitle1"/>


                    <com.caspervpn.vpn.helper.MyTextView
                        style="@style/TipsSubTitle"
                        android:text="@string/TipsSubTitle1"/>
                </LinearLayout>

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/TipsMargin"
                android:layout_marginRight="@dimen/TipsMargin"
                android:background="@color/White"/>

        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    style="@style/TipsImage"
                    android:src="@mipmap/tips_icon_2"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <com.caspervpn.vpn.helper.MyTextView
                        style="@style/TipsTitle"
                        android:text="@string/TipsTitle2"/>


                    <com.caspervpn.vpn.helper.MyTextView
                        style="@style/TipsSubTitle"
                        android:text="@string/TipsSubTitle2"/>
                </LinearLayout>

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/TipsMargin"
                android:layout_marginRight="@dimen/TipsMargin"
                android:background="@color/White"/>

        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    style="@style/TipsImage"
                    android:src="@mipmap/tips_icon_3"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <com.caspervpn.vpn.helper.MyTextView
                        style="@style/TipsTitle"
                        android:text="@string/TipsTitle3"/>


                    <com.caspervpn.vpn.helper.MyTextView
                        style="@style/TipsSubTitle"
                        android:text="@string/TipsSubTitle3"/>
                </LinearLayout>

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/TipsMargin"
                android:layout_marginRight="@dimen/TipsMargin"
                android:background="@color/White"/>

        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    style="@style/TipsImage"
                    android:src="@mipmap/tips_icon_4"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <com.caspervpn.vpn.helper.MyTextView
                        style="@style/TipsTitle"
                        android:text="@string/TipsTitle4"/>


                    <com.caspervpn.vpn.helper.MyTextView
                        style="@style/TipsSubTitle"
                        android:text="@string/TipsSubTitle4"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>




    </LinearLayout>
</RelativeLayout>