<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Map_Hint"
    android:visibility="invisible"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="@color/ThirdTransparent">


    <ImageView
        android:id="@+id/Shield"
        android:layout_width="@dimen/ConnectButtonDimensions"
        android:layout_height="@dimen/ConnectButtonDimensions"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/ConnectButtonMargin"
        android:src="@mipmap/map_shield_3"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/up_arrow"
        android:layout_below="@+id/Shield"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/MapHintArrowHeight"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/up_arrow"/>


    <com.caspervpn.vpn.helper.MyTextView
        style="@style/Map_Hint"
        android:layout_below="@+id/up_arrow"
        android:layout_centerHorizontal="true"
        android:text="@string/MapInstructionTop"/>


    <com.caspervpn.vpn.helper.MyButton
        style="@style/Map_Hint_Button"
        android:id="@+id/GotIt"/>


    <com.caspervpn.vpn.helper.MyTextView
        style="@style/Map_Hint"
        android:layout_above="@+id/down_arrow"
        android:layout_centerHorizontal="true"
        android:text="@string/MapInstructionButton"/>


    <ImageView
        android:id="@+id/down_arrow"
        android:layout_above="@+id/Connect_Disconnect"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/MapHintArrowHeight"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/down_arrow"/>

    <ImageButton
        android:id="@+id/Connect_Disconnect"
        style="@style/ConnectButton"
        android:src="@mipmap/map_connect"
        android:padding="@dimen/ConnectButtonConnectorPadding"
        android:layout_alignStart="@+id/Shield" />

</RelativeLayout>