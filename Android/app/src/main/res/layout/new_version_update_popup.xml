<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/PopupMargin"
    android:layout_marginLeft="@dimen/PopupMargin"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/popup_bg">

    <com.caspervpn.vpn.helper.MyTextView
        style="@style/Popup_Title_Login"
        android:text="@string/NewAppVersion"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <View
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="2dp"
            android:background="@color/White"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>


    <LinearLayout
        android:layout_marginLeft="@dimen/PopupButtonContainerMargin"
        android:layout_marginRight="@dimen/PopupButtonContainerMargin"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.caspervpn.vpn.helper.MyTextView
            style="@style/Popup_Message"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:paddingTop="@dimen/PopupTitleMarginTop"
            android:layout_marginLeft="@dimen/PopupButtonMargin"
            android:layout_marginRight="@dimen/PopupButtonMargin"
            android:paddingLeft="@dimen/PopupButtonMargin"
            android:paddingRight="@dimen/PopupButtonContainerMargin"
            android:text="@string/NewAppVersionDesc"
            android:textAlignment="viewStart" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/PopupButtonHeight"
        android:layout_margin="@dimen/PopupButtonContainerMargin">

        <com.caspervpn.vpn.helper.MyButton
            style="@style/Popup_Button"
            android:id="@+id/dialogButtonCancel"
            android:layout_marginRight="@dimen/PopupButtonMargin"
            android:layout_marginLeft="@dimen/PopupButtonMargin"
            android:text="@string/CANCEL"/>

        <com.caspervpn.vpn.helper.MyButton
            style="@style/Popup_Button"
            android:id="@+id/Updatebtn"
            android:layout_marginRight="@dimen/PopupButtonMargin"
            android:layout_marginLeft="@dimen/PopupButtonMargin"
            android:text="@string/UPDATE"/>
    </LinearLayout>



</LinearLayout>