<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/DarkBlue">

    <LinearLayout
        android:id="@+id/Menu_Container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/LightMediumGray"
        android:orientation="vertical">


        <include
            layout="@layout/toolbar_notitle"
            android:id="@+id/AppBarLayout"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/White">


            <ImageView
                android:padding="8dp"
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/menu_user_icon"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"/>

                <com.caspervpn.vpn.helper.MyTextView
                    style="@style/MenuUserName"
                    android:id="@+id/Username" />

                <com.caspervpn.vpn.helper.MyTextView
                    style="@style/MenuRemainingDays"
                    android:id="@+id/RemainingDays"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"/>
            </LinearLayout>

            <ImageButton
                android:scaleX="-1"
                android:id="@+id/edit_user"
                android:layout_marginBottom="20dp"
                android:layout_width="40dp"
                android:padding="10dp"
                android:layout_height="match_parent"
                android:src="@drawable/menu_edit_icon"
                android:background="@color/White"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/menu_fragment"
            android:layout_marginTop="10dp"
            android:layout_width="fill_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</LinearLayout>


