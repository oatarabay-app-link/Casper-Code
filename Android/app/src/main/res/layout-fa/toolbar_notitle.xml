<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize">

    <include layout="@layout/toolbar_notitle_nomenu"/>

    <ImageButton
        android:scaleX="-1"
        android:id="@+id/back"
        android:layout_alignParentRight="true"
        style="@style/ToolBarBackBtn"/>


    <ImageButton
        android:id="@+id/Shrink_Font"
        style="@style/ToolBarFontBtn"
        android:layout_alignParentLeft="true"
        android:src="@drawable/font_down"/>

    <ImageButton
        android:id="@+id/Grow_Font"
        style="@style/ToolBarFontBtn"
        android:src="@drawable/font_up"
        android:layout_toRightOf="@+id/Shrink_Font"/>

</RelativeLayout>