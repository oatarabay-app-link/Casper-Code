<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layoutDirection="ltr"
    android:background="@color/LightMediumGray">

    <LinearLayout
        style="@style/ServerItem"
        android:id="@+id/Server_Item">

        <ImageView
            android:scaleX="-1"
            style="@style/ServerItemBtn"/>

        <ImageView
            android:id="@+id/Server_Health"
            style="@style/ServerItemHelthIndicator"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingTop="@dimen/ServerItemPadding"
            android:paddingBottom="@dimen/ServerItemPadding"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.caspervpn.vpn.helper.MyTextView
                android:id="@+id/Server_Name"
                style="@style/ServerItemText"
                android:textAlignment="textEnd"/>

            <com.caspervpn.vpn.helper.MyTextView
                android:id="@+id/Server_IP"
                style="@style/ServerItemIP"
                android:textAlignment="textEnd"/>
        </LinearLayout>


        <ImageView
            android:id="@+id/Server_Flag"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:visibility="invisible"
            android:src="@mipmap/fr"/>

    </LinearLayout>
</LinearLayout>